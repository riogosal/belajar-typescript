{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "lib",
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
